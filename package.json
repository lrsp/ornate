{
  "name": "ornatejs",
  "version": "1.0.6",
  "description": "A decorator library to build node apps using express and dependency injection",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/lrsp/ornate.git",
  "author": "Lucas R. San Pedro <lucas@sanpedro.io>",
  "license": "MIT",
  "keywords": [
    "express",
    "decorators",
    "dependency injection"
  ],
  "scripts": {
    "build": "NODE_ENV=production ./node_modules/.bin/webpack --display-error-details --display-cached --config webpack.config",
    "watch": "NODE_ENV=development ./node_modules/.bin/webpack --progress --watch --colors --display-error-details --display-cached --config webpack.config",
    "test": "./node_modules/mocha/bin/mocha --opts mocha.opts",
    "lint": "tslint -p tsconfig.json",
    "prepare": "yarn build",
    "prepublishOnly": "yarn lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@koa/router": "^8.0.8",
    "ansi-colors": "^4.1.1",
    "http-status-codes": "^1.3.2",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^8.0.8",
    "node-fetch": "^2.6.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/koa": "^2.11.3",
    "@types/koa-router": "^7.4.0",
    "@types/koa__router": "^8.0.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.1",
    "@types/node-fetch": "^2.5.0",
    "@types/sinon": "^7.0.13",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^7.1.0",
    "node-loader": "^0.6.0",
    "sinon": "^9.0.1",
    "terser-webpack-plugin": "^2.3.5",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^6.1.0",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.5.3",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-node-externals": "^1.7.2"
  },
  "files": [
    "dist/**/*"
  ]
}
