{
  "name": "ornatejs",
  "version": "1.0.7",
  "description": "A decorator library to build node apps using koa and dependency injection",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/lrsp/ornate.git",
  "author": "Lucas R. San Pedro <lucas@sanpedro.io>",
  "license": "MIT",
  "keywords": [
    "koa",
    "decorators",
    "dependency injection"
  ],
  "scripts": {
    "build": "NODE_ENV=production ./node_modules/.bin/webpack --config webpack.config",
    "watch": "NODE_ENV=development ./node_modules/.bin/webpack --progress --watch --color --config webpack.config",
    "test": "./node_modules/mocha/bin/mocha --opts mocha.opts",
    "lint": "tslint -p tsconfig.json",
    "prepare": "yarn build",
    "prepublishOnly": "yarn lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@koa/router": "^10.1.0",
    "ansi-colors": "^4.1.1",
    "http-status-codes": "^2.1.4",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "node-fetch": "^2.6.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "@types/koa__router": "^8.0.7",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.5",
    "@types/node-fetch": "^2.5.12",
    "@types/sinon": "^10.0.2",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "mocha": "^9.0.3",
    "node-loader": "^2.0.0",
    "sinon": "^11.1.2",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.1.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "tslint": "^6.1.3",
    "tslint-loader": "^3.5.4",
    "typescript": "^4.3.5",
    "webpack": "5.47.0",
    "webpack-cli": "4.7.2",
    "webpack-node-externals": "3.0.0"
  },
  "files": [
    "dist/**/*"
  ]
}
