{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es2017", "esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "baseUrl": "src",
		"outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": ["src", "test"],
    "exclude": [
        "node_modules"
    ]
}
